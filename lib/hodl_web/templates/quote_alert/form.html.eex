<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :price_usd %>
  <%= number_input f, :price_usd, step: "any" %>
  <%= error_tag f, :price_usd %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
